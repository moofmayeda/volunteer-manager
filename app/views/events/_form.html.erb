<%= render("layouts/errors", :object => @event) %>

<%= form_for(@event) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
